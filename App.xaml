<Application x:Class="CodeReviewerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">

    <!--  App‑wide theme resources  -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 1. ModernWpf theme engine (handles Light / Dark) -->
                <ui:ThemeResources />

                <!-- 2. WinUI ‑ MahApps control styles -->
                <ui:XamlControlsResources />

                <!-- 3. Your new semantic GitHub palette -->
                <!--    Make sure the file lives at  Resource/GitHubModern.xaml -->
                <ResourceDictionary Source="Resource/GitHub.Modern.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
